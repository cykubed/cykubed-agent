apiVersion: batch/v1
kind: Job
metadata:
  labels:
    cykubed-job: "checkout"
    project_id: "{{project.id}}"
    local_id: "{{local_id}}"
    testrun_id: "{{testrun_id}}"
    branch: "{{branch}}"
  name: "cykubed-clone-{{testrun_id}}-{{sha}}"
  namespace: "{{namespace}}"
spec:
  backoffLimit: 5
  ttlSecondsAfterFinished: 600
  activeDeadlineSeconds: 600
  template:
    spec:
      securityContext:
        runAsNonRoot: true
        fsGroup: 10000
        runAsUser: 10000
        runAsGroup: 10000
      serviceAccountName: "cykubed"
      volumes:
        - name: build-volume
          persistentVolumeClaim:
            claimName: "{{pvc_name}}"
      restartPolicy: Never
      priorityClassName: "cykubed-low-priority"
      containers:
      - name: "cloner"
        image: "{{project.runner_image}}"
        env:
        - name: REDIS_PASSWORD
          valueFrom:
            secretKeyRef:
              name: "{{ redis_secret_name }}"
              key: "redis-password"
        - name: BUILD_DIR
          value: "/build"
        envFrom:
          - configMapRef:
              name: cykubed-agent-configmap
          - secretRef:
              name: cykubed-agent-secrets
        args: [ "{{command}}", "{{testrun_id}}"]
        resources:
          limits:
            cpu: 200m
            memory: 1G
          requests:
            cpu: 200m
            memory: 1G
        volumeMounts:
        - mountPath: "/build"
          name: build-volume
