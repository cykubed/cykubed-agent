apiVersion: batch/v1
kind: Job
metadata:
  labels:
    cykube-job: "runner"
    project_id: "{{project_id}}"
    local_id: "{{local_id}}"
    testrun_id: "{{testrun_id}}"
    branch: "{{branch}}"
  name: "cykube-run-{{project_name}}-{{local_id}}"
  namespace: cykube
spec:
  backoffLimit: 5
  ttlSecondsAfterFinished: 3600
  parallelism: {{parallelism}}
  activeDeadlineSeconds: {{deadline}}
  template:
    metadata:
      labels:
        project_id: "{{project_id}}"
        local_id: "{{local_id}}"
        testrun_id: "{{testrun_id}}"
        branch: "{{branch}}"
    spec:
      serviceAccountName: "cykube"
      volumes:
        - name: scratch-volume
          ephemeral:
            volumeClaimTemplate:
              spec:
                accessModes: [ "ReadWriteOnce" ]
                storageClassName: "{{storage_class}}"
                resources:
                  requests:
                    storage: "{{storage}}Gi"
      {{#gke_spot_enabled}}
      affinity:
        nodeAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: {{gke_spot_percentage}}
            preference:
              matchExpressions:
              - key: cloud.google.com/gke-spot
                operator: In
                values:
                - "true"
      {{/gke_spot_enabled}}
      {{! securityContext:
        runAsNonRoot: true
        fsGroup: 10000
        runAsUser: 10000
        runAsGroup: 10000 }}
      restartPolicy: OnFailure
      priorityClassName: "cykube-low-priority"
      containers:
      - name: "cykube-runner"
        image: {{runner_image}}
        env:
        - name: SCRATCH_DIR
          value: "/scratch"
        - name: CYPRESS_RETRIES
          value: "{{cypress_retries}}"
        - name: TZ
          value: "{{timezone}}"
        - name: REDIS_PASSWORD
          valueFrom:
            secretKeyRef:
              name: "cykube-redis"
              key: "redis-password"
        envFrom:
          - configMapRef:
              name: cykube-agent-configmap
          - secretRef:
              name: cykube-agent-secrets
        args: [ "run", "{{testrun_id}}"]
        imagePullPolicy: IfNotPresent
        resources:
          limits:
            cpu: "{{cpu_limit}}"
            memory: "{{memory_limit}}G"
          requests:
            cpu: "{{cpu_request}}"
            memory: "{{memory_request}}G"
        volumeMounts:
        - mountPath: "/scratch"
          name: scratch-volume
